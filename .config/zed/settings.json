{
	"base_keymap": "VSCode",
	"autosave": { "after_delay": { "milliseconds": 600000 } },
	"buffer_font_family": "FiraCode Nerd Font",
	"buffer_font_size": 18,
	"current_line_highlight": "gutter",
	"tabs": { "git_status": true },
	"always_treat_brackets_as_autoclosed": true,
	// "indent_guides": { "coloring": "indent_aware" },
	"tab_size": 4,
	"hard_tabs": true,
	"inlay_hints": { "enabled": true },
	"terminal": { "alternate_scroll": "on" },
	"theme": "Ayu Mirage",
	"calls": { "mute_on_join": true },

	"languages": {
		"JavaScript": {
			"format_on_save": {
				"external": {
					"command": "prettier",
					"arguments": ["--stdin-filepath", "{buffer_path}"]
				}
			}
		},
		"TypeScript": {
			"format_on_save": {
				"external": {
					"command": "prettier",
					"arguments": ["--stdin-filepath", "{buffer_path}"]
				}
			}
		}
	}
}
