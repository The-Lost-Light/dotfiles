{
	"base_keymap": "SublimeText",
	"show_edit_predictions": true,
	"edit_predictions": {
		"mode": "subtle",
		"copilot": {
			"proxy": null,
			"proxy_no_verify": null
		},
		"enabled_in_text_threads": false
	},
	"autosave": "on_focus_change",
	"buffer_font_family": "Maple Mono NF CN",
	"buffer_font_features": {
		"cv07": true,
		"cv61": true,
		"cv97": true,
		"cv99": true,
		"ss03": true
	},
	"buffer_font_size": 18,
	"tabs": { "git_status": true },
	"code_actions_on_format": { "source.organizeImports": true },
	"git": { "inline_blame": { "show_commit_summary": true } },
	"indent_guides": { "active_line_width": 2 },
	"hard_tabs": true,
	"use_smartcase_search": true,
	"soft_wrap": "editor_width",
	"terminal": {
		"cursor_shape": "bar",
		"font_family": "FiraCode Nerd Font",
		"line_height": "standard"
	},
	"minimap": { "show": "auto" },
	"theme": "Ayu Mirage",
	"agent": {
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-3-7-sonnet-latest"
		}
	},
	"calls": { "mute_on_join": true },
	"features": { "edit_prediction_provider": "zed" },

	"languages": {
		"Python": {
			"language_servers": ["ty", "!basedpyright", "discord_presence"]
		}
	},

	"lsp": {
		"typescript-language-server": {
			"initialization_options": {
				"vtsls": {
					"autoUseWorkspaceTsdk": true
				}
			}
		},
		"dart": {
			"binary": {
				"path": "fvm",
				"arguments": ["dart", "language-server", "--protocol=lsp"]
			}
		}
	}
}
