{
	"assistant": {
		"default_model": {
			"provider": "copilot_chat",
			"model": "gpt-4o"
		},
		"version": "2"
	},
	"features": { "inline_completion_provider": "none" },
	"base_keymap": "VSCode",
	"autosave": { "after_delay": { "milliseconds": 600000 } },
	"buffer_font_family": "FiraCode Nerd Font",
	"buffer_font_size": 18,
	"current_line_highlight": "gutter",
	"tabs": { "git_status": true },
	"always_treat_brackets_as_autoclosed": true,
	"tab_size": 4,
	"hard_tabs": true,
	"inlay_hints": { "enabled": false, "show_type_hints": false },
	"soft_wrap": "editor_width",
	"terminal": { "alternate_scroll": "on", "cursor_shape": "bar" },
	"theme": "Ayu Mirage",
	"calls": { "mute_on_join": true },
	"languages": {
		"JavaScript": {
			"format_on_save": {
				"external": {
					"command": "prettier",
					"arguments": ["--stdin-filepath", "{buffer_path}"]
				}
			}
		},
		"TypeScript": {
			"format_on_save": {
				"external": {
					"command": "prettier",
					"arguments": ["--stdin-filepath", "{buffer_path}"]
				}
			}
		}
	}
}
